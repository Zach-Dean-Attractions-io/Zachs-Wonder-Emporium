<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZachsWonderEmporium" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/acme</item>
        <item name="fontFamily">@font/acme</item>

    </style>

    <!-- Chip Style -->
    <style name="ExploreChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:fontFamily">@font/acme</item>
        <item name="fontFamily">@font/acme</item>
    </style>

    <!-- List Item Title -->
    <style name="ListItemTitle">
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Details Title -->
    <style name="DetailTitle">
        <item name="android:textSize">@dimen/details_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Details Live Time -->
    <style name="DetailLiveTime">
        <item name="android:textSize">@dimen/details_livetime_text_size</item>
    </style>

    <!-- Details Summary -->
    <style name="DetailSummary">
        <item name="android:textSize">@dimen/details_summary_text_size</item>
    </style>

</resources>